<div id="school-board" class="container-fluid">
  <div class="row">
    <div id="klasses" class="col-md-2">
        <div class="panel panel-info">
         <div class="panel-heading">
           <a type="button" class="pull-right" data-toggle="modal" data-target="#new_klass" href="#">
             <%= fa_icon "plus-circle" %></a>
           <b>Classes</b>
         </div>
         <div id="klasses-list" class="list-group">
           <%= render @klasses %>
         </div>
      </div>
    </div>
    <div id="sections" class="col-md-2 hidden">
      <div class="panel panel-info">
       <div class="panel-heading">
         <%= link_to fa_icon("plus-circle"), "#", class: "pull-right", remote: true %>
         <b>Sections</b>
       </div>
        <div id="sections-list" class="list-group">

        </div>
      </div>
    </div>
    <div id="students" class="col-md-4 hidden">
      <div class="panel panel-info">
        <div class="panel-heading">
          <%= link_to fa_icon("plus-circle"), "#", id: "add-student-trigger", class: "pull-right", remote: true %>
          <span class="pull-right">&nbsp; &nbsp;</span>
          <%= link_to fa_icon("hand-o-up"), "#", id: "take-attendance-trigger", class: "pull-right", remote: true %>
          <b>Students</b>
        </div>
        <div id="students-list" class="list-group">
        </div>
      </div>
    </div>
    <div id="attendance" class="col-md-4 hidden">
      <div class="panel panel-info">
        <div class="panel-heading">
          <%= link_to "Submit", "#", id: "submit-attendance", class: "pull-right btn btn-sm btn-primary", remote: true %>
          <span class="pull-right btn btn-sm">&nbsp; or &nbsp;</span>
          <%= link_to "Cancel", "#", id: "cancel-attendance", class: "pull-right btn btn-sm btn-default", remote: true %>
          <b>Attendance</b>
        </div>
        <div id="attendants-list" class="list-group">
        </div>
      </div>
    </div>
    <div id="student" class="col-md-4 hidden">
      <div class="panel panel-info">
        <div class="panel-heading">
          <%= link_to fa_icon("pencil"), "#", class: "pull-right", remote: true %>
          <b>Student Details</b>
        </div>
        <div class="panel-body">
          Panel content
        </div>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'klasses/form' %>
